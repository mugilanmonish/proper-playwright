#!/usr/bin/env sh

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

# Simple spinner
spinner() {
    local pid=$1
    local delay=0.1
    local spinstr='‚†ã‚†ô‚†π‚†∏‚†º‚†¥‚†¶‚†ß‚†á‚†è'
    while kill -0 $pid 2>/dev/null; do
        local temp=${spinstr#?}
        printf "\r${BLUE}%c Running checks...${NC}" "$spinstr"
        local spinstr=$temp${spinstr%"$temp"}
        sleep $delay
    done
    printf "\r"
}

# Animated dots
animate_dots() {
    local message=$1
    printf "%s" "$message"
    for i in 1 2 3; do
        printf "."
        sleep 0.3
    done
    printf "\n"
}

# Start animation
echo "${YELLOW}üî• Pre-commit hook activated!${NC}"
animate_dots "${BLUE}Scanning staged files"

# Run lint-staged in background
npx lint-staged &
LINT_PID=$!

# Show spinner while running
spinner $LINT_PID
wait $LINT_PID
LINT_EXIT_CODE=$?

# Result
if [ $LINT_EXIT_CODE -eq 0 ]; then
    echo "${GREEN}‚úÖ All checks passed! Ready to commit! üöÄ${NC}"
else
    echo "${RED}‚ùå Checks failed! Please fix the issues above.${NC}"
    exit 1
fi