// tsconfig.json
{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node10",
        "target": "ES2020",
        "esModuleInterop": true,
        "types": ["node", "playwright"],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src/**/*.ts", "playwright.config.ts", "global.d.ts"],
    "exclude": ["node_modules"]
}
