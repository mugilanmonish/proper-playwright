// tsconfig.json
{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "node10",
        "target": "ES2020",
        "esModuleInterop": true,
        "types": ["node", "playwright"],
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@selectors/*": ["pages/selectors/*"],
            "@actions/*": ["pages/actions/*"],
            "@basePage/*": ["pages/basePage/*"]
        }
    },
    "include": ["src/**/*.ts", "playwright.config.ts"],
    "exclude": ["node_modules"]
}
